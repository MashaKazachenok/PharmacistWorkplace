@model Web.Models.ClientListViewModel

@{
    ViewBag.Title = "Clients";
}

<div class="jumbotron">
    <h1>Clients</h1>
    <p><a href="/Clients/Create">Create</a></p>
</div>
<div>
    <form action="/Clients" method="get">
        @Html.EditorFor(x=>x.Search)
        <input type="submit" value="Search">
    </form>
</div>

<div>
    @foreach (var item in Model.Clients)
    { 
        <p>
            @item.FirstName @item.LastName |
            <a href="/Clients/Edit/@item.Id">Edit</a>
            <a href="/Clients/Delete/@item.Id">Delete</a> |

            <a href="/Clients/Details/@item.Id">View details</a>
            <a href="/Visits/Create?ClientId=@item.Id">Add visit</a>
        </p>
    }
</div>